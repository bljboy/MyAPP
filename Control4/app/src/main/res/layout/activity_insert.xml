<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Insert">


    <EditText
        android:id="@+id/Et_addUser"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape"
        android:digits="0123456789abcdefghijklmnopqrstuvwxyz.@"
        android:hint="Phone / Email"
        android:singleLine="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,MissingConstraints" />

    <ImageView
        android:id="@+id/view_adduser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        app:layout_constraintLeft_toRightOf="@id/Et_addUser"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/Et_addPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape"
        android:hint="Password"
        android:inputType="textPassword"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="@id/Et_addUser"
        app:layout_constraintTop_toBottomOf="@id/Et_addUser"
        tools:ignore="HardcodedText,MissingConstraints" />

    <EditText
        android:id="@+id/Et_addPassword_Again"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape"
        android:hint="Password Again"
        android:inputType="textPassword"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="@id/Et_addUser"
        app:layout_constraintTop_toBottomOf="@id/Et_addPassword"
        tools:ignore="HardcodedText,MissingConstraints" />

    <Button
        android:id="@+id/bt_addUser"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_marginTop="25sp"
        android:text="Register"
        app:layout_constraintStart_toStartOf="@id/Et_addPassword"
        app:layout_constraintTop_toBottomOf="@id/Et_addPassword_Again"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>