<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <gradient
        android:angle="270"
        android:endColor="#80FF00FF"
        android:startColor="#FFFF0000" />
    <padding
        android:bottom="10dp"
        android:left="20dp"
        android:right="20dp"
        android:top="10dp" />
    <solid android:color="#FFF5F5F5" /> <!--设置填充颜色-->
    <stroke
        android:width="1.0dip"
        android:color="#FFF5F5F5"
        android:dashWidth="3.0dip"
        android:dashGap="0.0dip" />
    <corners android:radius="35dp" />  <!--设置圆角-->
</shape>